<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="binancepay" translate="label" sortOrder="100"
                   showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Binance Pay Method</label>
                <field id="status" translate="label comment" sortOrder="10" type="select"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="title" translate="label" type="text" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Binance Pay</label>
                </field>
                <field id="api_key" translate="label" type="text" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>API Key</label>
                </field>
                <field id="secret_key" translate="label" type="password" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Secret Key</label>
                </field>
            </group>
        </section>
    </system>
</config>
